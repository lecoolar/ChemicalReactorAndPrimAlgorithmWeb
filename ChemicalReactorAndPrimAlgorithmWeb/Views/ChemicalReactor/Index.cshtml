@model ChemicalReactorAndPrimAlgorithmWeb.Models.ChemicalReactorModel

@{
    ViewBag.Title = "Симуляция химического реактора";
}

<h2>Симуляция химического реактора</h2>

@using (Html.BeginForm("Solve", "ChemicalReactor", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.T, "Температура (T)")
        @Html.TextBoxFor(m => m.T, new { @class = "form-control", type = "number", step = "0.1" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.U, "Управляющий параметр (U)")
        @Html.TextBoxFor(m => m.U, new { @class = "form-control", type = "number", min = "0", max = "823", step = "0.1" })
    </div>
    <button type="submit" class="btn btn-primary">Рассчитать</button>
}

@if (ViewBag.X3Final != null)
{
    <h3>Конечное количество продукта x3(T): @ViewBag.X3Final</h3>
}
